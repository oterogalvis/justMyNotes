{{#partial "content"}}
    {{#if username}}
        <h1>Welcome {{username}}!</h1>

        <p>View <a href="/ideas">all course ideas</a>.</p>
    {{else}}
        <h1>Welcome Students!</h1>
        <form action="/sign-in" method="post">
            <input type="text" name="username" placeholder="What's your name?">
            <button>Sing In</button>
        </form>
    {{/if}}
{{/partial}}

